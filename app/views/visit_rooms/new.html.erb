 <%= render 'visits/select_category' %>

<div class="panel-group">
  <div class="panel panel-default"> 
    <div class="panel-heading">Patient Transfer</div>  
      <div class="panel-body">
      	<%=form_for [@visit, @visit_room] do |f| %>
      		<%=f.label :bed_no %>
      		<%=f.select :bed_id, options_for_select([''] ),{}, class: "form-control bed_no ",:readonly=>true%>
      		<%=f.label :room_no %>
      		<%=f.select :room_id,options_for_select([''] ),{}, class: "form-control room_no",:readonly=>true%>
          <%=f.label :date %>
          <%=f.text_field :date, :id=>"start_date_picker" ,:class=>'form-control'%>
          <%=f.submit 'save',:class=>"btn btn-primary" %>
				<%end%>
      </div>  
  </div>
</div>

<script>
  $('#start_date_picker').datepicker({
      format: 'yyyy-mm-dd',
      daysOfWeekDisabled: [0, 6],
      daysOfWeekHighlighted: [1, 2, 3, 4, 5],
      todayBtn: false
  })
</script>


