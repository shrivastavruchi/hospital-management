<div class="container">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">Ipd Visits </div>
        <div class="panel-body">
          <table  class="table table-striped">
            <% if current_user.has_role?(:doctor)%>
              <%=render partial: 'search_visit_form'%>
            <%end%>
            </br>
            </br>
            <thead>
              <tr>
                <th>Ipd id</th>
                <th>Patient name</th>
                <th>Doctor name</th>
                <th>Date Admit</th>
                <th>Room No</th>
                <th>Bed No</th>
              </tr>
            </thead>
            <tbody class="admit_patient">
              <% @visits.each do |visit| %>
                <%unless visit.discharge.present?%>
                  <tr>
                    <td>
                      <% if can? :show, Visit %>
                        <%=link_to visit.id,visit_path(visit) %>
                      <%else%>
                        <%= visit.id %>
                      <%end%>  
                    </td>
                    <td><%= visit.patient.patient_name %></td>  
                    <td>  
                      <%if visit.user.present?%>   
                        <%= visit.user.name %>
                      <%end%>
                    </td>  
                    <td><%= visit.date%></td>
                    <td>
                      <%= get_visit_rooms(visit) %>  
                    </td>
                    <td><%= @visit_room.bed.bed_no%></td>
                    <%#=link_to 'Progress Notes',new_visit_note_path(visit)%>
                  </tr>
                <%end%>  
              <% end %>
            </tbody>
          </table>
     </div>     
  </div>        
</div>
<br>





