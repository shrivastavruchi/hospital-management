  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id,Category.all.map{|cat|[ cat.category_type, cat.id]},{},:class=>'form-control' %>
  </div>
  <div class="field">
    <%= f.label :room_rent %><br>
    <%= f.text_field :room_rent,:class=>'form-control' %>
