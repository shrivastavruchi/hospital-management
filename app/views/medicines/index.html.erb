<div class="container">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">Medicine  </div>
        <div class="panel-body">
          <div>
            <%=link_to 'New Medicine', new_medicine_path, :class=>"btn btn-primary","data-toggle"=>"modal", "data-target"=>"#myModal",:remote=>:true%>
          </div>
          <div>
            <%=link_to 'Expiry medicine'%>
          </div>
          <%=link_to'Export', export_path(:format=>:csv) %>
          </br>
          </br>

          <table class="table table-striped data-table ">
            <thead>
              <tr>
                <th>Medicine name</th>
                <th>Charges</th>
                <th>Quantity</th>
                <th>Expire Date</th>
                <th>Price</th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @medicines.each do |medicine| %>
                <% if medicine.present? %>
                  <tr>
                    <td><%= medicine.medicine_name %></td>
                    <td><%= charges = medicine.charges %></td>
                    <td><%= quantity = medicine.quantity %></td>
                    <td><%= medicine.expire_date %></td>
                    <td><%= charges.to_i*quantity.to_i %></td>
                    <td><%= link_to 'Edit', edit_medicine_path(medicine),:remote=>true,"data-toggle"=>"modal", "data-target"=>"#myModal" %></td>
                    <td><%= link_to 'Destroy', medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <%end%>
              <% end %>
            </tbody>
          </table>
            
      </div>  
    </div>
  </div>
</div> 
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
  
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body medicine_form">
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
    
  </div>
</div>



<script>
    $(document).ready(function () {
        $('.data-table').dataTable();
    });
</script>

