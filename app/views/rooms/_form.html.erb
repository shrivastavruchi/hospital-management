  </div>
  <div class="field">
    <%#= f.label :beds %><br>
    <%#= f.text_field :beds,:class=>'form-control' %>
  </div>
  <%if params[:action] == "edit"%>
    <button id="save" class="btn btn-primary" >Save</button>

  <%else%>  
    <button id="save" type="button" class="btn btn-primary" >Save</button>
  <%end%>  
<% end %>


