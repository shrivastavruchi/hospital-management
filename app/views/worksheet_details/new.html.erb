<%= form_for [@addmission, @work_sheet_detail] do |f| %>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.text_field :time %>
  </div>
  <div class="field">
    <%= f.label :blood_presure %><br>
    <%= f.text_field :blood_presure %>
  </div>

  <div class="field">
    <%= f.label :wieght %><br>
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label :height %><br>
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :pulse_rate %><br>
    <%= f.text_field :pulse_rate %>
  </div>
