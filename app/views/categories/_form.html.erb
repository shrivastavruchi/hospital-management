  
<p style="display:none;">Category can not be  blank</p>
 <%=form_for @category,:url=>categories_path,remote: true do |f|%>
  <div> 
    <%=f.label :category%>  
    <%=f.text_field :category_type,:class=>"form-control"%>
  </div>
  <div>
    <%=f.label :description%>   
    <%=f.text_area :description,:class=>"form-control"%>
  </div>  
  <button  type="button" class="btn btn-primary" id="save">Save</button>
<%end%>

