<table  class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Patient name</th>
      <th>Doctor Name</th>
      <th>Date</th>
      <th>Visit Type</th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%=link_to visit.id ,visit_path(visit) %>	
        <td><%= visit.patient.patient_name %></td>
        <td><%= visit.user.name if visit.user.present?%>
        <td><%=visit.date%></td>
        <td><%=visit.visit_type%></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>
