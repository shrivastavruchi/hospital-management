  <div class="panel-group">
    <div class="panel panel-default"> 
      <div class="panel-heading">Add Prescription Detail</div>  
        <div class="panel-body">
          <%= form_for [@visit, @prescription_detail] do |f| %>
            <% if @prescription_detail.errors.any? %>
              <div id="">

                <ul>
                <% @prescription_detail.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :Medicine %><br>
              <%= f.select :medicine_id,Medicine.all.map{|m| [m.medicine_name , m.id]},{}, :class=>"form-control" %>
            </div>
             <div class="field">
              <%= f.label :quantity %><br>
              <%= f.text_field :quantity,:class=>"form-control" %>
            </div>
            <div class="field">
              <%= f.label :day %><br>
              <%= f.text_field :day,:class=>"form-control" %>
            </div>
            <div class="field">
              <%= f.label :description %><br>
              <%= f.text_area :description,:class=>"form-control" %>
            </div>
            <div class="field">
              <%= f.label :instruction %><br>
              <%= f.text_area :schedule,:class=>"form-control" %>
            </div>
            <%=f.submit 'save',:class=>"btn btn-primary"%>
          <% end %>
        </div>  
    </div>
  </div>