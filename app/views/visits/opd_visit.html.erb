<h3>Opd Visit</h3>
<table  class="table table-striped">
  <thead>
    <tr>
      <th>Opd Id</th>
      <th>Patient name</th>
      <th>Doctor name</th>
      <th>Opd date</th>
      <th>Register date</th>
      <th>Services</th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%=link_to visit.id ,visit_path(visit) %></td>
        <td><%= visit.patient.patient_name %></td>  
        <td>
          <%if visit.user.present?%>   
            <%= visit.user.name %>
          <%end%>
        </td>
        <td><%= visit.date %></td>
        <td><%=visit.patient.created_at.strftime("%d-%m-%Y")%></td>
        <td><%=link_to'services',  visit_services_path(visit)  %></td>
        <td><%#=link_to 'genrate bill',visit_genrate_bill_path(visit)%></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>