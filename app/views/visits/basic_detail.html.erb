<div class="container">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading"> Opd visit</div>
        <div class="panel-body">
        <%if @visit.visit_type == "ipd"%>
          <p>
            <strong>Ipd no</strong>
            <%= @visit.id %>
          </p>


          <p>
            <strong>Admit Date:</strong>
            <%= @visit.date %>
          </p>
          <p>
            <strong>Room no:</strong>
            <%= @visit.room_no%>
          </p>
        <%else%>
          <p>
            <strong>Opd no</strong>
            <%= @visit.id %>
          </p>


          <p>
            <strong>Visit Date:</strong>
            <%= @visit.date %>
          </p>
        <%end%>  

          <p>
            <strong>Patient name</strong>
            <%=@visit.patient.patient_name if @visit.patient.present?%>
          </p>

          <p>
            <strong>Doctor name</strong>
            <%=@visit.user.name if @visit.user.present?%>
          </p>
        </div>  
    </div>
  </div>
</div> 
